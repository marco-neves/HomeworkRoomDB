<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/rv_bk">


    <ImageView
        android:id="@+id/money"
        android:layout_width="64dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_rvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        style="@style/textStyle"
        tools:text="Homework description"
        app:layout_constraintStart_toEndOf="@id/money"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date_rvl"
        style="@style/textStyle"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Week 7: Day 3"
        app:layout_constraintStart_toEndOf="@+id/money"
        app:layout_constraintTop_toBottomOf="@id/tv_title_rvl" />

    <TextView
        android:id="@+id/tv_price_rvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Complete!"
        android:layout_margin="8dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/money"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_rvl" />
</androidx.constraintlayout.widget.ConstraintLayout>